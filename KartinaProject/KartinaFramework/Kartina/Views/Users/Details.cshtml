        <div class="panel panel-default">
            <div class="card" style="height: 100px;">
                <div class="card-body" style="text-align: center; padding:10px">
                    <div>
                        <h5 class="card-title"><strong>@Html.DisplayFor(modelItem => item.Titre)</strong></h5>
                        <p class="card-text">Prix :@Html.DisplayFor(modelItem => item.Prix)</p>
                        <p class="card-text">Date de sortie :@Html.DisplayFor(modelItem => item.Date)</p>
                        <p class="card-text">Pièces restantes: @Html.DisplayFor(modelItem => item.NbTiragesMax)</p>
                    </div>
                </div>
            </div>
        </div>
